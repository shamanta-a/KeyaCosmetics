<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rateSupplierPane" prefHeight="220" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.keyacosmetic.Shamanta.QualityControlOfficer.RateSupplierController">
    <children>
        <Label layoutX="14" layoutY="14" text="Rate Supplier" />
        <ComboBox fx:id="supplierDropdown" layoutX="14" layoutY="50" prefWidth="200" />
        <Slider fx:id="ratingSlider" layoutX="14" layoutY="90" max="10" min="0" />
        <TextArea fx:id="commentsField" layoutX="14" layoutY="130" prefHeight="50" prefWidth="300" promptText="Comments" />
        <Button fx:id="submitRatingBtn" layoutX="14" layoutY="190" onAction="#submitratingOA" text="Submit Rating" />
    </children>
</AnchorPane>
