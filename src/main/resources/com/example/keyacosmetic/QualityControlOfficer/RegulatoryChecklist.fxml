<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.keyacosmetic.QualityControlOfficer.RegulatoryChecklistController">
    <children>
        <Label layoutX="180.0" layoutY="20.0" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Regulatory Checklist" />
        <VBox layoutX="100.0" layoutY="70.0" spacing="10.0">
            <TextArea fx:id="checklistArea" prefHeight="200.0" prefWidth="400.0" promptText="Enter checklist items here..." />
            <Button fx:id="btnValidate" onAction="#handleValidateChecklist" text="Validate Entries" />
            <Button fx:id="btnExport" onAction="#handleExportReport" text="Export Report" />
        </VBox>
    </children>
</AnchorPane>
