<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="auditPane" prefHeight="200" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.keyacosmetic.QualityControlOfficer.AuditController">
    <children>
        <Button fx:id="scanLocationBtn" layoutX="14" layoutY="14" onAction="#ScanOA" text="Scan Location (QR/GPS)" />
        <TextArea fx:id="checklistArea" layoutX="14" layoutY="50" prefHeight="80" promptText="Audit Checklist" />
        <Button fx:id="submitAuditBtn" layoutX="14" layoutY="140" onAction="#submitOA" text="Submit" />
    </children>
</AnchorPane>
