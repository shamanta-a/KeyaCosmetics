<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="issueReportPane" prefHeight="200" prefWidth="450" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.keyacosmetic.DeliveryStaff.DeliveryIssuesController">
    <children>
        <Label layoutX="14" layoutY="14" text="Report Delivery Issue" />
        <TextArea fx:id="issueField" layoutX="14" layoutY="40" prefHeight="60" prefWidth="400" promptText="Describe the issue" />
        <Button fx:id="attachPhotoBtn" layoutX="14" layoutY="110" onAction="#attachphotoOA" text="Attach Photo" />
        <Button fx:id="submitReportBtn" layoutX="120" layoutY="110" onAction="#submitreportOA" text="Submit Report" />
    </children>
</AnchorPane>
